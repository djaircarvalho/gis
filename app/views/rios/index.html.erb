
<div id="map" class="mapa">
  <%=
    map(:center => {
      :latlng => [-5.360528731202039, -42.67536163330079],
      :zoom => 16
    })
  %>
</div>

<p id="notice"><%= notice %></p>

<h2>Rios
<%= link_to 'Add', new_rio_path , class:"btn btn-primary direita"%>
</h2>

<table class="table">
  <thead>
    <tr>
      <th>Código</th>
      <th>Descrição</th>
      <!-- <th>Geom</th> -->
      <th colspan="2" style="text-align: center">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @rios.each do |rio| %>
      <tr>
        <td><%= rio.id %></td>
        <td><%= rio.descricao %></td>
        <!-- <td><%= rio.geom %></td> -->
        <td><%= link_to 'Edit', edit_rio_path(rio) , class:"btn btn-info"%></td>
        <td><%= link_to 'Destroy', rio, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

