<div id="map" class="mapa">
  <%=
    map(:center => {
      :latlng => [-5.360528731202039, -42.67536163330079],
      :zoom => 15
    })
  %>
</div>
<br>

<div id='search-box'>
  <form action='/search' id='search-form' method='get' target='_top'>
    <input id='search-text' name='q' placeholder='Digite sua pesquisa' type='text'/>
    <button id='search-button' type='submit'><span>Buscar</span></button>
  </form>
</div>

<div class="layers">

	<table class="table">
		<tbody>
			<tr>
				<td>Quadras</td>
				<td><%= link_to 'Detalhes', quadras_path, class:"link"%></td>
				<td><%= link_to 'Criar', new_quadra_path, class:"link"%></td>
			</tr>
			<tr>
				<td>Rios</td>
				<td><%= link_to 'Detalhes', rios_path, class:"link"%></td>
				<td><%= link_to 'Criar', new_rio_path, class:"link"%></td>
			</tr>
		</tbody>
	</table>

</div>